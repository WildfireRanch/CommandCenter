{
  "name": "CommandCenter Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "remoteEnv": {
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
    "RAILWAY_TOKEN": "${localEnv:RAILWAY_TOKEN}",
    "GOOGLE_CLIENT_ID": "${localEnv:GOOGLE_CLIENT_ID}",
    "GOOGLE_CLIENT_SECRET": "${localEnv:GOOGLE_CLIENT_SECRET}",
    "NEXTAUTH_SECRET": "${localEnv:NEXTAUTH_SECRET}"
  },

  "forwardPorts": [3000, 8000, 8080, 8501, 8502],

  "portsAttributes": {
    "3000": {
      "label": "Next.js Frontend",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "FastAPI Backend",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "MCP Server",
      "onAutoForward": "notify"
    },
    "8501": {
      "label": "CrewAI Studio",
      "onAutoForward": "notify"
    },
    "8502": {
      "label": "Streamlit Dashboard",
      "onAutoForward": "notify"
    }
  }
}
